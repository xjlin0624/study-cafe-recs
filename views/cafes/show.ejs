<%layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">

<div class="row">
    <div class="col-6">
        <div id="cafeCarousel" class="carousel slide">
            <div class="carousel-inner">
                <% cafe.images.forEach((img, i) => { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <img src="<%=img.url%>" class="d-block w-100" alt="">
                    </div>
                <% }) %>
            </div>
            <% if (cafe.images.length > 1) {%>
                <button class="carousel-control-prev" type="button" data-bs-target="#cafeCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#cafeCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            <% } %>            
        </div>
        <div class="card mb-5">
            <div class="card-body">
                <h5 class="card-title"><%=cafe.title%></h5>
                <p class="card-text"><%=cafe.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%=cafe.location%></li>
                <li class="list-group-item">$<%=cafe.price%>/night</li>
            </ul>
            <%if ( currentUser && cafe.author.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a class="card-lin btn btn-info" href="/cafes/<%=cafe._id%>/edit">Edit</a>
                    <form class="d-inline" action="/cafes/<%=cafe._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            <% } %>
            <div class="card-footer text-muted">
                Submitted by <%=cafe.author.username%> (2 days ago)
            </div>
        </div>
    </div>

    <div class="col-6">
        <% if (currentUser) { %>
            <h3>Leave a review!</h2>
            <form action="/cafes/<%=cafe._id%>/reviews" method="POST" class="mb-5 validated-form" novalidate>
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label" for="wifi">Wifi?</label>
                        <input class="form-control" type="text" id="wifi" name="review[wifi]" placeholder="strong / spotty / unavailable"  required>
                        <div class="valid-feedback">
                            connection!!
                        </div>
                    </div>
                    <div class="col-6">
                        <label class="form-label" for="space">Spacious?</label>
                        <input class="form-control" type="text" id="space" name="review[space]" placeholder="spacious / impossible to find space"  required>
                        <div class="valid-feedback">
                            spacious!!
                        </div>    
                    </div>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        great insigts :0
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        <% } %>
        <% for (let review of cafe.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <p class="card-subtitle mb-2 text-muted"><%=review.author.username%></p>
                    <p class="starability-result starability-scale" data-rating="<%=review.rating%>">
                        Rated: <%=review.rating%> stars
                    </p>
                    <div class="card-text">
                        <p>Space: <%=review.space%></p> 
                        <p>Wifi: <%=review.wifi%></p> 
                        <p><%=review.body%></p>
                    </div>
                    <% if (currentUser && review.author.equals(currentUser)) { %>
                        <form action="/cafes/<%=cafe._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
</div>