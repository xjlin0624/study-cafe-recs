<%layout('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 500px"></div>

<h1>All Cafes</h1>
<div>
    <a href="/cafes/new">Add Cafe</a>
</div>
<% for (let cafe of cafes) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (cafe.images.length) { %>
                    <img class="img-fluid" alt="" src="<%=cafe.images[0].url%>">
                <% } else { %>
                    <img class="img-fluid" alt="" src="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=cafe.title%></h5>
                    <p class="card-text"><%=cafe.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=cafe.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/cafes/<%=cafe._id%>">View <%=cafe.title%></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const cafes = {features: <%-JSON.stringify(cafes)%>};
</script>
<script src="/javascripts/clusterMap.js"></script>