<%layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Cafe</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/cafes/<%=cafe._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="cafe[title]" value="<%=cafe.title%>" required>
                <div class="valid-feedback">
                    good find!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="cafe[location]" value="<%=cafe.location%>" required>
                <div class="valid-feedback">
                    good find!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Americano Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="cafe[price]" value="<%=cafe.price%>" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                </div>
                <div class="valid-feedback">
                    kachinggg$
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="cafe[description]" required><%=cafe.description%></textarea>
                <div class="valid-feedback">
                    very informative!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="unage">Add More Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <div class="valid-feedback">
                    great visuals!
                </div>
            </div>    
            <div class="mb-3 row mx-auto">
                <% cafe.images.forEach(function(img,i){ %>
                    <div class="card mb-3 mx-2 col-5">
                        <div class="card-body">
                            <div class="card-title">
                                <div class="form-check-inline">
                                    <input type="checkbox" name="deleteImages[]" id="img-<%=i%>" value="<%=img.filename%>">
                                    <label for="img-<%=i%>">Delete?</label>
                                </div>
                            </div>
                            <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Cafe</button>
            </div>
        </form>
        <a href="/cafes/<%=cafe._id%>">Back to Cafe</a>
    </div>
</div>